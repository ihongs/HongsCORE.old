<?xml version="1.0" encoding="UTF-8"?>

<db xmlns="http://hongs-core"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://hongs-core db.xsd">
    <source link="default"/>
    <driver link="default"/>
    <tables>
        <!-- 广告 -->
        <table name="aa_ad_base_info"
               primaryKey="id">
            <assoc type="HAS_MANY"
                   name="aa_ad_place_rel"
                   foreignKey="ad_id">
                <assoc type="BLS_TO"
                       join="LEFT"
                       name="aa_place_base_info"
                       foreignKey="place_id"/>
            </assoc>
            <assoc type="HAS_MANY"
                   name="aa_ad_stuff_rel"
                   foreignKey="ad_id">
                <assoc type="BLS_TO"
                       join="LEFT"
                       name="aa_stuff_base_info"
                       foreignKey="stuff_id"/>
            </assoc>
        </table>
        <table name="aa_ad_time_info"
               primaryKey="id">
            <assoc type="BLS_TO"
                   name="aa_ad_base_info"/>
        </table>
        <!-- 广告位 -->
        <table name="aa_place_base_info"
               primaryKey="id">
            <assoc type="BLS_TO" join="LEFT" name="aa_ad_base_info" foreignKey="id">
                
            </assoc>
            <assoc type="HAS_MANY"
                   name="aa_place_style_rel"
                   foreignKey="place_id">
                <assoc type="BLS_TO"
                       name="aa_style_base_info"
                       foreignKey="style_id"/>
            </assoc>
        </table>
        <!-- 素材 -->
        <table name="aa_stuff_base_info"
               primaryKey="id"/>
        <!-- 展现形式 -->
        <table name="aa_style_base_info"
               primaryKey="id"/>
        <!-- 关联表 -->
        <table name="aa_ad_place_rel"/>
        <table name="aa_ad_stuff_rel"/>
        <table name="aa_place_style_rel"/>
    </tables>
</db>
