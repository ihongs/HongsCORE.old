<?xml version="1.0" encoding="UTF-8"?>
<!--DOCTYPE ac SYSTEM "ac.dtd"-->
<!--
    Document   : ac-default.xml
    Created on : September 20, 2010, 12:07 PM
    Author     : Hongs
    Description:
        动作过滤配置(含页面结构, 可用于描述菜单或路径).
        action登记动作URI, group登记分组名, page登记页面名
-->

<act xmlns="http://hongs-core"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://hongs-core ac.xsd">
    <page name="首页" uri="/">
        <page name="首页" uri="/"/>
        <page name="广告中心" uri="/action/Jump/To?page=ad">
            <page name="订单管理" uri="/adms/order_list.jsp">
                <page name="{opt}广告主" uri="/adms/owner_form.jsp"/>
                <page name="{opt}订单" uri="/adms/order_form.jsp"/>
                <page name="广告管理" uri="/adms/ad_list.jsp">
                    <page name="{opt}广告" uri="/adms/ad_form.jsp"/>
                </page>
            </page>
            <page name="素材管理" uri="/adms/stuff_list.jsp">
                <page name="{opt}广告主" uri="/adms/owner_form.jsp"/>
                <page name="{opt}素材" uri="/adms/stuff_form.jsp"/>
            </page>
            <page name="广告位管理" uri="/adms/place_list.jsp">
                <page name="{opt}分类" uri="/adms/class_form.jsp"/>
                <page name="{opt}广告位" uri="/adms/place_form.jsp"/>
            </page>
            <page name="广告形式管理" uri="/adms/style_list.jsp">
                <page name="{opt}广告形式" uri="/adms/style_form.jsp"/>
            </page>
        </page>
        <page name="报表中心" uri="/action/Jump/To?page=report">
            <page name="数据概览" uri="/crms/ad_index">
            </page>
            <page name="自由报表" uri="/crms/ad_report">
            </page>
        </page>
        <page name="控制中心" uri="/action/Jump/To?page=system">
            <page name="用户管理" uri="/cums/user_list.jsp">
                <page name="{opt}部门" uri="/cums/dept_form.jsp"/>
                <page name="{opt}用户" uri="/cums/user_form.jsp"/>
                <group name="部门管理" key="cums.dept.manage">
                    <action>/action/cums/Dept/Tree</action>
                    <action>/action/cums/Dept/Info</action>
                    <action>/action/cums/Dept/Save</action>
                    <action>/action/cums/Dept/Remove</action>
                </group>
                <group name="用户管理" key="cums.user.manage">
                    <action>/action/cums/Dept/Tree</action>
                    <action>/action/cums/Dept/Info</action>
                    <action>/action/cums/Dept/Save</action>
                    <action>/action/cums/Dept/Remove</action>
                </group>
            </page>
            <page name="系统设置" uri="/"/>
        </page>
    </page>
</act>
