<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Hongs CORE Framework</display-name>
    <context-param>
        <param-name>debug</param-name>
        <param-value>3</param-value>
    </context-param>
    <!-- Apis Servlet -->
    <servlet>
        <servlet-name>Apis</servlet-name>
        <servlet-class>app.hongs.action.serv.ApisAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Apis</servlet-name>
        <url-pattern>*.api</url-pattern>
    </servlet-mapping>
    <!-- Acts Servlet -->
    <servlet>
        <servlet-name>Acts</servlet-name>
        <servlet-class>app.hongs.action.serv.ActsAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Acts</servlet-name>
        <url-pattern>*.act</url-pattern>
    </servlet-mapping>
    <!-- Conf Servlet -->
    <servlet>
        <servlet-name>Conf</servlet-name>
        <servlet-class>app.hongs.action.serv.ConfAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Conf</servlet-name>
        <url-pattern>/common/conf/*</url-pattern>
    </servlet-mapping>
    <!-- Lang Servlet -->
    <servlet>
        <servlet-name>Lang</servlet-name>
        <servlet-class>app.hongs.action.serv.LangAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Lang</servlet-name>
        <url-pattern>/common/lang/*</url-pattern>
    </servlet-mapping>
    <!-- Warder Filter -->
    <filter>
        <filter-name>Warder</filter-name>
        <filter-class>app.hongs.action.serv.ActsWarder</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Warder</filter-name>
        <url-pattern>*.api</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Warder</filter-name>
        <url-pattern>*.act</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Warder</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Warder</filter-name>
        <url-pattern>/common/conf/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Warder</filter-name>
        <url-pattern>/common/lang/*</url-pattern>
    </filter-mapping>
    <!-- Haim DB Worker Filter -->
    <filter>
        <filter-name>DBWorker</filter-name>
        <filter-class>app.hongs.action.serv.AutoRigger</filter-class>
        <init-param>
            <param-name>action</param-name>
            <param-value>haim/db</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>DBWarder</filter-name>
        <url-pattern>/demo/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DBWorker</filter-name>
        <url-pattern>/demo/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DBWarder</filter-name>
        <url-pattern>/search/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DBWorker</filter-name>
        <url-pattern>/search/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
    </filter-mapping>
    <!-- Default Tags -->
    <jsp-config>
        <taglib>
            <taglib-uri>/hongs.tag</taglib-uri>
            <taglib-location>/WEB-INF/tag.tld</taglib-location>
        </taglib>
    </jsp-config>
    <!-- Other Settings -->
    <session-config>
        <session-timeout>480</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>default.html</welcome-file>
    </welcome-file-list>
    <icon>
        <small-icon>/favicon.ico</small-icon>
        <large-icon>/favicon.ico</large-icon>
    </icon>
</web-app>
