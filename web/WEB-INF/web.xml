<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Hongs CORE Framework</display-name>
    <context-param>
        <param-name>debug</param-name>
        <param-value>3</param-value>
    </context-param>
    <!-- Action Init -->
    <filter>
        <filter-name>ActionInit</filter-name>
        <filter-class>app.hongs.action.ActionInit</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ActionInit</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ActionInit</filter-name>
        <url-pattern>*.de</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ActionInit</filter-name>
        <url-pattern>*.api</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ActionInit</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ActionInit</filter-name>
        <url-pattern>*.js-conf</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ActionInit</filter-name>
        <url-pattern>*.js-lang</url-pattern>
    </filter-mapping>
    <!-- Action Servlet -->
    <servlet>
        <servlet-name>Action</servlet-name>
        <servlet-class>app.hongs.action.Action</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Action</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <!-- Detect Servlet -->
    <servlet>
        <servlet-name>Detect</servlet-name>
        <servlet-class>app.hongs.action.DetectAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Detect</servlet-name>
        <url-pattern>*.de</url-pattern>
    </servlet-mapping>
    <!-- Cmdlet Servlet -->
    <servlet>
        <servlet-name>Cmdlet</servlet-name>
        <servlet-class>app.hongs.cmdlet.CmdletAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cmdlet</servlet-name>
        <url-pattern>*.api</url-pattern>
    </servlet-mapping>
    <!-- JsConf Servlet -->
    <servlet>
        <servlet-name>JsConf</servlet-name>
        <servlet-class>app.hongs.action.JsConfAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsConf</servlet-name>
        <url-pattern>*.js-conf</url-pattern>
    </servlet-mapping>
    <!-- JsLang Servlet -->
    <servlet>
        <servlet-name>JsLang</servlet-name>
        <servlet-class>app.hongs.action.JsLangAction</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JsLang</servlet-name>
        <url-pattern>*.js-lang</url-pattern>
    </servlet-mapping>
    <!-- Default Tags -->
    <jsp-config>
        <taglib>
            <taglib-uri>/hs.tags</taglib-uri>
            <taglib-location>/WEB-INF/conf/default.tld</taglib-location>
        </taglib>
    </jsp-config>
    <!-- Other Settings -->
    <session-config>
        <session-timeout>480</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
