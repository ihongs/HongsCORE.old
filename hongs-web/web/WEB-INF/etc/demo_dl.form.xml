<?xml version="1.0" encoding="UTF-8"?>
<root>
    <enum name="gender">
        <value code="1">男</value>
        <value code="0">女</value>
        <value code="2">中性</value>
        <value code="3">未知</value>
    </enum>
    <enum name="degree">
        <value code="1">学士</value>
        <value code="2">硕士</value>
        <value code="3">博士</value>
        <value code="4">院士</value>
        <value code="0">其他</value>
    </enum>
    <enum name="interest">
        <value code="1">社会</value>
        <value code="2">军事</value>
        <value code="3">娱乐</value>
        <value code="4">体育</value>
        <value code="0">其他</value>
    </enum>
    <form name="demo1">
        <field disp="ID" name="id" type="string">
            <param name="widget">hidden</param>
        </field>
        <field disp="姓名" name="name" type="string" required="yes"/>
        <field disp="电话" name="phone" type="number" required="yes"/>
        <field disp="邮箱" name="email" type="string" required="yes"/>
        <field disp="照片" name="photo" type="file"/>
        <field disp="生日" name="birthday" type="date"/>
        <field disp="性别" name="gender" type="enum">
            <param name="enum">gender</param>
        </field>
        <field disp="学历" name="degree" type="enum">
            <param name="enum">degree</param>
            <param name="widget">radio</param>
        </field>
        <field disp="兴趣" name="interest" type="enum" repeated="yes">
            <param name="enum">interest</param>
            <param name="widget">check</param>
            <param name="hideInList">yes</param>
        </field>
        <field disp="说明" name="note"  type="string">
            <param name="widget">textarea</param>
            <param name="hideInList">yes</param>
        </field>
    </form>
</root>
