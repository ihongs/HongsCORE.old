<?xml version="1.0" encoding="UTF-8"?>
<root>
    <form name="demo">
        <field disp="ID" name="id" type="string" required="yes">
            <param name="html-type">hidden</param>
        </field>
        <field disp="检索" name="wd" type="search" required="yes">
            <param name="html-type">textarea</param>
            <param name="invisble">yes</param>
        </field>
        <field disp="名称" name="name" type="string">
            <param name="html-type">text</param>
        </field>
        <field disp="说明" name="note" type="stored">
            <param name="html-type">textarea</param>
        </field>
        <field disp="数据" name="data" type="json" rule="Pass">
            <param name="html-type">textarea</param>
        </field>
        <field disp="类型" name="type" type="string">
        </field>
        <field disp="标识" name="identity" type="number">
            <param name="type">int</param>
        </field>
        <field disp="省份" name="province" type="number">
            <param name="type">int</param>
        </field>
        <field disp="行业" name="trade_id" type="number" repeated="yes">
            <param name="type">int</param>
        </field>
    </form>
</root>
