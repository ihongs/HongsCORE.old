<?xml version="1.0" encoding="UTF-8"?>
<root>
    <enum name="gender">
        <value code="1">男</value>
        <value code="0">女</value>
        <value code="2">中性</value>
        <value code="3">未知</value>
    </enum>
    <enum name="position">
        <value code="1">总裁</value>
        <value code="2">总监</value>
        <value code="3">经理</value>
        <value code="4">主管</value>
        <value code="0">打杂</value>
    </enum>
    <enum name="degree">
        <value code="1">学士</value>
        <value code="2">硕士</value>
        <value code="3">博士</value>
        <value code="4">院士</value>
        <value code="0">其他</value>
    </enum>
    <enum name="interest">
        <value code="1">社会</value>
        <value code="2">军事</value>
        <value code="3">娱乐</value>
        <value code="4">体育</value>
        <value code="0">其他</value>
    </enum>
    <form name="demo1">
        <field disp="ID" name="id" type="hidden"/>
        <field disp="姓名" name="name" type="text" required="yes"/>
        <field disp="电话" name="phone" type="tel" required="yes"/>
        <field disp="邮箱" name="email" type="email" required="yes"/>
        <field disp="照片" name="photo" type="file"/>
        <field disp="生日" name="birthday" type="date"/>
        <field disp="性别" name="gender" type="select">
            <param name="enum">gender</param>
        </field>
        <field disp="职位" name="position" type="select" repeated="yes">
            <param name="enum">position</param>
            <param name="hideInList">yes</param>
        </field>
        <field disp="学历" name="degree" type="radio">
            <param name="enum">degree</param>
        </field>
        <field disp="兴趣" name="interest" type="check" repeated="yes">
            <param name="enum">interest</param>
            <param name="hideInList">yes</param>
        </field>
        <field disp="说明" name="note" type="textarea">
            <param name="hideInList">yes</param>
        </field>
        <field disp="添加新字段" name="testx" type="input">
            
        </field>
    </form>
    <form name="demo2">
        <field disp="ID" name="id" type="hidden"/>
        <field disp="名称" name="name" type="text" required="yes"/>
        <field disp="说明" name="note" type="number" required="yes"/>
        <field disp="照片" name="photo" type="file" required="yes"/>
        <field disp="创建时间" name="ctime" type="date">
            <param name="default">$now</param>
            <param name="hideInForm">yes</param>
        </field>
    </form>
    <form name="demo3">
        <field disp="ID" name="id" type="hidden"/>
        <field disp="选择商品" name="demo2_id." type="picker" required="yes" repeated="yes">
            <param name="data-ak">demo2</param>
            <param name="data-vk">id</param>
            <param name="data-tk">name</param>
        </field>
        <field disp="姓名" name="name" type="text" required="yes"/>
        <field disp="电话" name="phone" type="number" required="yes"/>
        <field disp="地址" name="addr" type="text" required="yes"/>
        <field disp="下单时间" name="ctime" type="date">
            <param name="default">$now</param>
            <param name="hideInForm">yes</param>
        </field>
    </form>
</root>
